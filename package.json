{
  "name": "multicluster-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": false, 
  "bin": {
    "multicluster-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
